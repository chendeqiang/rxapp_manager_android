<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_driver_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_driver_tx" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_driverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:text="张三疯"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_call" />

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_driver_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="18662170766"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_driver_card" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_driver_cidentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="320321---4212"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/ll_driver_info"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_carNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="苏E12345"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_car2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="25座中巴"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_car1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="速腾"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_12" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_change_relation"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/btn_blue_box"
            android:focusable="false"
            android:text="编辑"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>


</RelativeLayout>