<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".module.act.OrderInfoActivity">

    <include layout="@layout/action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 订单号 -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/default_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:text="订单编号:"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_14"/>

                    <TextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin"
                        android:text="201809141517419330"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_14"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_copy"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_margin"
                    android:background="@drawable/btn_blue_box"
                    android:text="复制"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/text_size_12"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/line_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:text="接机(经济型)"
                    android:textColor="@color/text_color_blue"
                    android:textSize="@dimen/text_size_14"/>


                <TextView
                    android:id="@+id/tv_order_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/default_margin2"
                    android:layout_toRightOf="@+id/tv_order_type"
                    android:text="300元"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_margin2"
                    android:text="已完成"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_14"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:background="@color/line_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="60dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/ic_height"
                            android:layout_height="@dimen/ic_height"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:src="@drawable/ic_start_address"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="地址:"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_flight"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_flight"
                            android:layout_width="@dimen/ic_height"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:src="@drawable/ic_plane"/>

                        <TextView
                            android:id="@+id/tv_flight_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="航班:"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>

                        <TextView
                            android:id="@+id/tv_flight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="MU5128"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_start_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/ic_height"
                            android:layout_height="@dimen/ic_height"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:src="@drawable/ic_start_address"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="起点:"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>

                        <TextView
                            android:id="@+id/tv_start_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="上海浦东机场T2航站楼"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_end_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp">

                        <ImageView
                            android:layout_width="@dimen/ic_height"
                            android:layout_height="@dimen/ic_height"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:src="@drawable/ic_end_address"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="终点:"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>

                        <TextView
                            android:id="@+id/tv_end_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="上海迪斯尼乐园"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="40dp">

                        <ImageView
                            android:layout_width="@dimen/ic_height"
                            android:layout_height="18dp"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:src="@drawable/ic_time"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="时间:"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin"
                            android:text="2018-09-14 00:00"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_14"/>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/default_margin2"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:text="乘客手机:"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/tv_passenger_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:padding="5dp"
                    android:text="18015436112"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/default_margin2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:text="备注:"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:padding="5dp"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/ll_driver_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="60dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:text="司机"
                    android:textSize="@dimen/text_size_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/default_margin2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:text="王师傅    18265656625"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:id="@+id/tv_driver_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:text="苏E88889    (大众速腾)"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_size_16"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin3"
                    android:layout_marginRight="@dimen/default_margin3"
                    android:layout_weight="1"
                    android:background="@color/line_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="已完成"
                    android:textSize="@dimen/text_size_16"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin3"
                    android:layout_marginRight="@dimen/default_margin3"
                    android:layout_weight="1"
                    android:background="@color/line_color"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_finish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:gravity="center_horizontal"
                android:text="完成时间： 2018年9月14日18:30"
                android:textSize="@dimen/text_size_18"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/ll_order_operate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/default_margin40"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_weight="1"
                        android:background="@color/text_color_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="订单操作"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/text_size_14"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin40"
                        android:layout_weight="1"
                        android:background="@color/text_color_blue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_order_arrange"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:background="@drawable/btn_blue_box"
                        android:text="派工"
                        android:textSize="@dimen/text_size_12"/>

                    <Button
                        android:id="@+id/btn_order_revise"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:background="@drawable/btn_blue_box"
                        android:text="改派"
                        android:textSize="@dimen/text_size_12"/>

                    <Button
                        android:id="@+id/btn_return2pool"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:background="@drawable/btn_blue_box"
                        android:text="重回订单池"
                        android:textSize="@dimen/text_size_12"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_route"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:background="@drawable/btn_blue_box"
                        android:text="路线"
                        android:textSize="@dimen/text_size_12"/>

                    <Button
                        android:id="@+id/btn_add_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:background="@drawable/btn_blue_box"
                        android:text="添加备注"
                        android:textSize="@dimen/text_size_12"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>