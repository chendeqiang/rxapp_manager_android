<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@drawable/navigation_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.it.rxapp_manager_android.widget.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/item_margin"
                android:src="@drawable/ic_default_head"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_drivers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_drivers"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableRight="@drawable/ic_gree_arrow"
            android:paddingRight="@dimen/default_margin"
            android:text="车队司机"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_orders"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_order"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:text="车队订单"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待服务"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/tv_recv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_marginRight="@dimen/item_margin"
                    android:text="0"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_15"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gree_arrow"
                    android:textColor="@color/text_color_black"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_car"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableRight="@drawable/ic_gree_arrow"
            android:paddingRight="@dimen/default_margin"
            android:text="车辆管理"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_valuation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_valuation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableRight="@drawable/ic_gree_arrow"
            android:paddingRight="@dimen/default_margin"
            android:text="计价管理"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_bill"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableRight="@drawable/ic_gree_arrow"
            android:paddingRight="@dimen/default_margin"
            android:text="统计账单"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_rule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_rule"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableRight="@drawable/ic_gree_arrow"
            android:paddingRight="@dimen/default_margin"
            android:text="服务规范"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_setting"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:drawableRight="@drawable/ic_gree_arrow"
            android:paddingRight="@dimen/default_margin"
            android:text="用户设置"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_margin"
        android:background="@color/activity_bg"/>


    <LinearLayout
        android:id="@+id/ll_custom_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/ic_height"
            android:layout_height="@dimen/ic_height"
            android:layout_marginLeft="@dimen/default_margin"
            android:src="@drawable/ic_kefu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:text="联系客服"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_custom_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:text="400-887-8810"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_logout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/default_margin">

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="200dp"
            android:layout_height="@dimen/nav_item_height"
            android:layout_centerHorizontal="true"
            android:background="@color/colorButtonBg"
            android:text="登出"
            android:textSize="@dimen/text_size_16"/>
    </RelativeLayout>


</LinearLayout>
