<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context="com.it.rxapp_manager_android.module.act.SettingActivity">

    <include layout="@layout/action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:id="@+id/rl_check_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height">


            <ImageView
                android:id="@+id/img_check_version"
                android:layout_width="@dimen/ic_height"
                android:layout_height="@dimen/ic_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin"
                android:src="@drawable/ic_check_version"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_margin"
                android:layout_toRightOf="@+id/img_check_version"
                android:text="版本更新"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_check_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_margin"
                android:text="v_1.0.0"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
