<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_driver"/>

    <TextView
        android:id="@+id/tv_driver_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin10"
        android:layout_toRightOf="@+id/iv_driver"
        android:lines="1"
        android:text="郭靖"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_toRightOf="@+id/tv_car_typee"
        android:text="一汽-大众-速腾"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_car_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_driver_name"
        android:text="苏E66666"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_car_typee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin10"
        android:layout_toRightOf="@+id/tv_car_no"
        android:text="豪华型"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_14"/>

</RelativeLayout>