<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_ic_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:src="@drawable/ic_car_2"/>


    <TextView
        android:id="@+id/tv_car_type"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin"
        android:text="速腾"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_car_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin2"
        android:layout_toRightOf="@+id/tv_car_no"
        android:text="舒适型"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/tv_car_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_toRightOf="@+id/iv_ic_car"
        android:text="苏E66088"
        android:textColor="@color/text_color_black_gray"
        android:textSize="@dimen/text_size_14"/>


</RelativeLayout>